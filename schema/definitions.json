{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "Name": {
            "type": "string",
            "pattern": "^[A-Za-z_][A-Za-z0-9_]*$"
        },
        "Dec": {
            "type": "string",
            "pattern": "^[0-9]+$"
        },
        "Hex": {
            "type": "string",
            "pattern": "^0[Xx][0-9A-Fa-f]+$"
        },
        "IntValue": {
            "oneOf": [
                {
                    "type": "integer"
                },
                {
                    "type": "string",
                    "pattern": "^[0-9]+$"
                },
                {
                    "type": "string",
                    "pattern": "^0[Xx][0-9A-Fa-f]+$"
                }
            ]
        },
        "IntSize": {
            "type": "integer",
            "enum": [
                1,
                2,
                4
            ]
        },
        "FullEnumDef": {
            "oneOf": [
                {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Name"
                    }
                },
                {
                    "type": "object",
                    "patternProperties": {
                        "^[0-9]+$": {
                            "$ref": "#/definitions/Name"
                        },
                        "^0[Xx][0-9A-Fa-f]$": {
                            "$ref": "#/definitions/Name"
                        }
                    }
                }
            ]
        },
        "EnumDef": {
            "oneOf": [
                {
                    "$ref": "#/definitions/Name"
                },
                {
                    "$ref": "#/definitions/FullEnumDef"
                }
            ]
        },
        "VarDef": {
            "type": "object",
            "properties": {
                "kind": {
                    "type": "string"
                }
            },
            "oneOf": [
                {
                    "properties": {
                        "kind": {
                            "const": "int"
                        },
                        "type": {
                            "type": "string",
                            "enum": [
                                "u8",
                                "u16",
                                "u32",
                                "s8",
                                "s16",
                                "s32"
                            ]
                        },
                        "base": {
                            "type": "string",
                            "enum": [
                                "dec",
                                "hex"
                            ]
                        }
                    },
                    "required": ["kind", "type"],
                    "additionalProperties": false
                },
                {
                    "properties": {
                        "kind": {
                            "const": "bool"
                        },
                        "size": {
                            "$ref": "#/definitions/IntSize"
                        }
                    },
                    "required": ["kind", "size"],
                    "additionalProperties": false
                },
                {
                    "properties": {
                        "kind": {
                            "const": "enum_val"
                        },
                        "size": {
                            "$ref": "#/definitions/IntSize"
                        },
                        "enum_def": {
                            "$ref": "#/definitions/EnumDef"
                        }
                    },
                    "required": ["kind", "size"],
                    "additionalProperties": false
                },
                {
                    "properties": {
                        "kind": {
                            "const": "pointer"
                        },
                        "type_cast": {
                            "type": "string"
                        }
                    },
                    "required": ["kind"],
                    "additionalProperties": false
                },
                {
                    "properties": {
                        "kind": {
                            "const": "struct"
                        },
                        "fields": {
                            "type": "array",
                            "items": {
                                "properties": {
                                    "name": {
                                        "$ref": "#/definitions/Name"
                                    },
                                    "type": {
                                        "$ref": "#/definitions/VarDef"
                                    }
                                }
                            }
                        }
                    },
                    "required": ["kind", "fields"],
                    "additionalProperties": false
                },
                {
                    "properties": {
                        "kind": {
                            "const": "array"
                        },
                        "count": {
                            "$ref": "#/definitions/IntValue",
                            "minimum": 1
                        },
                        "items": {
                            "oneOf": [
                                {
                                    "$ref": "#/definitions/VarDef"
                                },
                                {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/definitions/VarDef"
                                    }
                                }
                            ]
                        },
                        "format": {
                            "type": "string",
                            "enum": [
                                "single_line",
                                "multi_line",
                                "int_index",
                                "enum_index",
                                "ascii"
                            ],
                            "default": "multi_line"
                        },
                        "enum_def": {
                            "$ref": "#/definitions/EnumDef"
                        },
                        "trailing_comma": {
                            "type": "boolean",
                            "default": false
                        }
                    },
                    "required": ["kind", "count", "items"],
                    "additionalProperties": false
                }
            ]
        }
    }
}
